---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
interface Props {
    title: string;
}

const title = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>Moon Base Books</title>
    </head>
    <body>
        <Header />
        <div class="page-content">
            <img
                src="logo_horizontal.png"
                alt="The Moon Base logo; a small ray gun shooting a laser over the company name"
                height="150"
                width="300"
            />
        </div>
        <hr />
        <div class="page-content">
            <div class="title-page-links">
                <a class="title-page-links" href="/browse"><h2>Browse</h2></a>
                <a class="title-page-links" href="/submit"><h2>Submit</h2></a>
                <a class="title-page-links" href="/contact"><h2>Contact</h2></a>
                <a class="title-page-links" href="/resources"
                    ><h2>Resources</h2></a
                >
            </div>
        </div>
        <Footer />
    </body>
</html>

<style>
    .page-content {
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-left: auto;
        margin-right: auto;
    }

    hr {
        width: 60%;
    }

    @media (max-width: 479px) {
        .page-content {
            width: 90%;
        }

        hr {
            width: 100%;
        }
    }
</style>
