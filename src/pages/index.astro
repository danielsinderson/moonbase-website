---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
interface Props {
    title: string;
}

const title = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="At Moon Base Books we publish books with heart, craft, and ambition. Whether poetry, essays, mathematics, or games, if it pulses with life we want to publish it." />
        <meta name="keywords" content="Poetry, Publishing, Literature, Essays" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="generator" content={Astro.generator} />
        <title>Moon Base Books</title>
    </head>
    <body>
        <Header />
        <div class="page-content">
            <img
                src="logo_horizontal.webp"
                alt="The Moon Base logo; a small ray gun shooting a laser over the company name"
                height="150"
                width="300"
            />
        </div>
        <hr />
        <div class="page-content">
            <div>
                <a class="title-page-links" href="/browse"><h2>Browse</h2></a>
                <a class="title-page-links" href="/contact"><h2>Connect</h2></a>
                <a class="title-page-links" href="/resources"
                    ><h2>Resources</h2></a
                >
            </div>
            <script>
                import "../scripts/generateSampleText.js";
            </script>
            <a href="/" class="sample-card" id="text-sample-card">
                <p class="sample-text" id="sampleText"></p>
                <p class="sample-source" id="sampleSource"></p>
                <p class="sample-author" id="sampleAuthor"></p>
            </a>
        </div>
        <Footer />
    </body>
</html>

<style>
    .page-content {
        width: clamp(400px, 50%, 800px);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-left: auto;
        margin-right: auto;
    }

    .title-page-links {
        font-size: large;
    }

    .sample-card {
        outline: 2px solid;
        width: 400px;
        padding: 10px;
        margin-bottom: 20px;
        box-shadow: 10px 10px black;
    }

    .sample-card:hover {
        cursor: pointer;
    }

    .sample-card:active {
        transform: translateY(5px);
        box-shadow: 0px 0px black;
    }

    .sample-text {
        font-size: 12pt;
        line-height: 16pt;
        margin-top: 2px;
    }

    .sample-source {
        font-style: italic;
        font-weight: bold;
        line-height: 14pt;
        margin: 2px;
    }

    .sample-author {
        line-height: 14pt;
        margin: 2px;
    }

    hr {
        width: clamp(400px, 50%, 800px);
    }
</style>
